<h1>Listing orders</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>User</th>
      <th>Item</th>
      <th>Quantity</th>
      <th>notification_params</th>
      <th>status</th>
      <th>transaction_id</th>
     <th>purchased_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.address %></td>
        <td><%= order.city %></td>
        <td><%= order.state %></td>
        <td><%= order.zip %></td>
        <td><%= order.buyer.name %></td>
        <td><%= order.item_id %></td>
        <td><%= order.quantity %></td>
        <td><%= order.notification_params %></td>
        <td><%= order.status %></td>
        <td><%= order.transaction_id %></td>
        <td><%= order.purchased_at %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

