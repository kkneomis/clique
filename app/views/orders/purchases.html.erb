<h1 class="text-center">Items Purchased</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Image</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>User</th>
      <th>Item</th>
      <th>Quantity</th>
      <th>status</th>
     <th>Purchased On</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= cl_image_tag(order.item.image_url(:thumbnail)) %></td>
        <td><%= order.address %></td>
        <td><%= order.city %></td>
        <td><%= order.state %></td>
        <td><%= order.zip %></td>
        <td><%= order.buyer.name %></td>
        <td><%= link_to order.item.name, order.item %></td>
        <td><%= order.quantity %></td>
        <td><%= order.status %></td>
        <td><%= order.purchased_at.strftime("Purchased on %m/%d/%Y") %></td>
        <td>
          <% if order.shipped==true %>
              <p style="color:blue"><b>This item has been shipped!</b></p>
          <% else %>
              <p style="color:red"><b>This item has not yet been shipped!</b></p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
