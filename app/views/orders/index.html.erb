<h1>Listing orders</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Seller</th>
      <th>Buyer</th>
      <th>Item</th>
      <th>Quantity</th>
      <th>status</th>
      <th>shipped?</th>
      <th>transaction_id</th>
     <th>purchased_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.seller.name, order.seller %></td>
        <td><%= link_to order.buyer.name, order.buyer %></td>
        <td><%= link_to order.item.name, order.item %></td>
        <td><%= order.quantity %></td>
        <td><%= order.status %></td>
        <td>
         <% if order.shipped==true %>
            <b style="color:blue">This item has been shipped</b>
          <% else %>
          <b style="color:red">This item has not been shipped </b>
          <% end %>
        
        </td>
        <td><%= order.transaction_id %></td>
        <td><%= order.purchased_at %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

